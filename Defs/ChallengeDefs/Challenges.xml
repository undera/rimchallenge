<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
    <ChallengeDef>
        <defName>10colonists</defName>
        <workerClass>Challenge_NColonists</workerClass>
        <label>Reach 10 Colonists</label>
        <description>Have 10 colonists at the same time</description>
        <targetValue>10</targetValue>
        <reward>
            <MealSurvivalPack>20</MealSurvivalPack>
            <Medicine>5</Medicine>
            <Silver>100</Silver>
        </reward>    
        <TabViewX>0</TabViewX>
        <TabViewY>0</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>20colonists</defName>
        <workerClass>Challenge_NColonists</workerClass>
        <label>Reach 20 Colonists</label>
        <description>Have 20 colonists at the same time. Can you manage this to happen?</description>
        <targetValue>20</targetValue>
        <reward>
            <MealSurvivalPack>20</MealSurvivalPack>
            <Medicine>10</Medicine>
            <Gold>50</Gold>
        </reward>            
        <prerequisites>
             <li>10colonists</li>
        </prerequisites>
        <TabViewX>0</TabViewX>
        <TabViewY>1</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>50colonists</defName>
        <workerClass>Challenge_NColonists</workerClass>
        <label>Reach 50 Colonists</label>
        <description>Have 20 colonists at the same time. Is it possible at all?</description>
        <targetValue>50</targetValue>
        <reward>
            <Component>20</Component>
            <GlitterworldMedicine>10</GlitterworldMedicine>
            <Gold>500</Gold>
        </reward>            
        <prerequisites>
             <li>20colonists</li>
        </prerequisites>
        <TabViewX>0</TabViewX>
        <TabViewY>2</TabViewY>
    </ChallengeDef>

    <ChallengeDef>
        <defName>kill100animals</defName>
        <workerClass>Challenge_KillAnimals</workerClass>
        <label>Kill 100 Animals</label>
        <description>You need some fresh meat to feed your growing colony. It's easy to get it from wildlife around.</description>
        <targetValue>100</targetValue>
        <reward>
            <Gun_HeavySMG>1</Gun_HeavySMG>
        </reward>            
        <TabViewX>1</TabViewX>
        <TabViewY>0</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>kill500animals</defName>
        <workerClass>Challenge_KillAnimals</workerClass>
        <label>Kill 500 Animals</label>
        <description>Roll up your sleeves, theres a lot of shooting practice expected!</description>
        <targetValue>500</targetValue>
        <reward>
            <Gun_AssaultRifle>2</Gun_AssaultRifle>
        </reward>            
        <prerequisites>
             <li>kill100animals</li>
        </prerequisites>
        <TabViewX>1</TabViewX>
        <TabViewY>1</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>kill1000animals</defName>
        <workerClass>Challenge_KillAnimals</workerClass>
        <label>Kill 1000 Animals</label>
        <description>Actually, you can make a lot of apparel from all this skin!</description>
        <targetValue>1000</targetValue>
        <reward>
            <Gun_ChargeRifle>3</Gun_ChargeRifle>
        </reward>            
        <prerequisites>
             <li>kill500animals</li>
        </prerequisites>
        <TabViewX>1</TabViewX>
        <TabViewY>2</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>killAllAnimals</defName>
        <workerClass>Challenge_KillAnimalsAll</workerClass>
        <label>Kill All Animals</label>
        <description>Okay, that's enough of them eating your crops, getting mad and attacking colonists. 
            Just clean up the map, and your pets too.
        </description>
        <applicability>Only available on maps with a lot of wildlife.</applicability>
        <reward>
            <Gun_Minigun>1</Gun_Minigun>
        </reward>            
        <TabViewX>1</TabViewX>
        <TabViewY>3</TabViewY>
    </ChallengeDef>

    <ChallengeDef>
        <defName>mineOut100</defName>
        <workerClass>Challenge_MineOutN</workerClass>
        <label>Mine Out 100 Tiles</label>
        <description>Yo dwarves! There is some rock ahead! Mine out 100 blocks of rock.</description>
        <applicability>Only available on maps with high hills or mountains</applicability>
        <targetValue>100</targetValue>
        <reward>
            <Jade>200</Jade>
            <Uranium>100</Uranium>
            <Steel>50</Steel>
            <Plasteel>20</Plasteel>
            <Gold>10</Gold>
        </reward>            
        <TabViewX>3</TabViewX>
        <TabViewY>0</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>mineOutResources</defName>
        <workerClass>Challenge_MineOutResources</workerClass>
        <label>Mine Out All Resources</label>
        <description>Mine out all of resources hidden in rocks on the map</description>
        <applicability>Only available on maps with high hills or mountains</applicability>
        <reward>
            <Jade>500</Jade>
            <Uranium>250</Uranium>
            <Steel>500</Steel>
            <Plasteel>200</Plasteel>
            <Gold>100</Gold>
        </reward>            
        <prerequisites>
             <li>mineOut100</li>
        </prerequisites>
        <TabViewX>3</TabViewX>
        <TabViewY>1</TabViewY>
    </ChallengeDef>
    <ChallengeDef>
        <defName>mineOutAll</defName>
        <workerClass>Challenge_MineOutAll</workerClass>
        <label>Mine Out All</label>
        <description>Don't leave a single mineable rock tile!</description>
        <applicability>Only available on maps with high hills or mountains</applicability>
        <reward>
            <Jade>2000</Jade>
            <Uranium>1000</Uranium>
            <Steel>500</Steel>
            <Plasteel>200</Plasteel>
            <Gold>1000</Gold>
        </reward>            
        <prerequisites>
             <li>mineOutResources</li>
        </prerequisites>
        <TabViewX>3</TabViewX>
        <TabViewY>2</TabViewY>
    </ChallengeDef>
</Defs>